{% for message in app.flashes('result') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<form id="form" method="post" action="{{ path('endereco_store') }}">
    <div class="form_fields">
        <input type="hidden" name="_method" value="{{ method|default('post') }}" />
        <input type="hidden" name="id" value="{{ endereco.id|default(0) }}" />
        <input type="hidden" name="token" value="{{ csrf_token('form_endereco') }}"/>

        <div class="col">
            <label>Quadra</label>
            <input type="text" id="quadra" name="quadra" value="{{ endereco.quadra|default('') }}" required="required" maxlength="25" pattern="[a-zA-Z0-9]+">
        </div>

        <div class="col">
            <label>Número</label>
            <input type="text" id="numero" name="numero" value="{{ endereco.numero|default('') }}" required="required" maxlength="10" pattern="[0-9]+">
        </div>

        <div class="col">
            <label>Observação</label>
            <input type="text" id="observacao" name="observacao" value="{{ endereco.observacao|default('') }}" required="required" maxlength="50">
        </div>
        <br>
        <div class="div_button_submit">
            <button type="submit" class="button_submit">Salvar</button>
        </div>
    </div>
</form>
