{% extends 'base.html.twig' %}

{% block title %}Contato index{% endblock %}

{% block body %}
    <h1>Contato index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contato in contatos %}
            <tr>
                <td>{{ contato.id }}</td>
                <td>{{ contato.nome }}</td>
                <td>{{ contato.telefone }}</td>
                <td>
                    <a href="{{ path('contato_show', {'id': contato.id}) }}">show</a>
                    <a href="{{ path('contato_edit', {'id': contato.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contato_new') }}">Create new</a>
{% endblock %}
